{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "src"
  ]
}